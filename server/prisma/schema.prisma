generator client{
    provider = "prisma-client-js"
}

datasource db{
    provider = "mongodb"
    url = env("DATABASE_URL")
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String?
    email String @unique
    image String?
    bookedVisits Json[]
    favResidences String[] @db.ObjectId
}

model Residency{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    title String
    description String
    price String
    address String
    city String
    country String
    image String
    facilities Json
    userEmail String
    owner  User @relation("Owner", fileds:[userEmail], references: [email]) 

}